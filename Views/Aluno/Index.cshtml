@model List<ExercicioMVC.Models.Aluno>

@{
    ViewData["Title"] = "Lista de Alunos";
}

<h2>Lista de Alunos</h2>

<a asp-action="Create" class="btn btn-primary">Novo Aluno</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Idade</th>
            <th>Turma</th>
            <th>Ações</th> <!-- Correção -->
        </tr>
    </thead>
    <tbody>
        @foreach (var aluno in Model)
        {
            <tr>
                <td>@aluno.Nome</td>
                <td>@aluno.Idade</td>
                <td>@aluno.Turma</td>
                <td>
                    <a asp-action="Details" asp-route-id="@aluno.Id" class="btn btn-info btn-sm">Detalhes</a>
                    <a asp-action="Edit" asp-route-id="@aluno.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@aluno.Id" class="btn btn-danger btn-sm">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
