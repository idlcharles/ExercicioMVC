@model ExercicioMVC.Models.Aluno
@{
    ViewData["Title"] = "Excluir Aluno";
}
<h2>Você deseja excluir este aluno?</h2>
<dl class="row">
    <dt class="col-sm-2">Nome</dt>
    <dd class="col-sm-10">@Model.Nome</dd>
    <dt class="col-sm-2">Idade</dt>
    <dd class="col-sm-10">@Model.Idade</dd>
    <dt class="col-sm-2">Turma</dt>
    <dd class="col-sm-10">@Model.Turma</dd>
</dl>
<form asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Confirmar Exclusão</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
